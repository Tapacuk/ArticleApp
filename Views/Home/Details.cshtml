@model ArticleApp.Models.Article
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="articleDetails">
    <h3>@Model.Title</h3>

    @if (Model.Image != null)
    {
        <img src="data: image / jpeg; base64,@(Convert.ToBase64String(Model.Image))" class="imgIndexSize" />
    }
    else
    { <img src="~/images/default.png" asp-append-version="true" class="imgIndexSize" />}
    <br />
    <span>@Model.Text</span>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
